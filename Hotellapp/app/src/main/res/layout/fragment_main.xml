<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.vegard.hotellapp.layout.MainFragment">

    <Button
        android:id="@+id/roomServiceBtn"
        android:layout_width="match_parent"
        android:layout_height="92dp"
        android:text="Room Service"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/myBookingsBtn"
        android:layout_marginTop="108dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/myBookingsBtn"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/myBookingsBtn"
        android:layout_width="match_parent"
        android:layout_height="92dp"
        android:text="My bookings"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/roomServiceBtn"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="16dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/mapBtn"
        android:layout_width="match_parent"
        android:layout_height="92dp"
        android:text="Map"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/lateArrivalBtn"
        app:layout_constraintTop_toBottomOf="@+id/lateArrivalBtn"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/lateArrivalBtn"
        android:layout_marginTop="-1dp"
        app:layout_constraintHorizontal_bias="0.0" />

    <Button
        android:id="@+id/lateArrivalBtn"
        android:layout_width="match_parent"
        android:layout_height="92dp"
        android:text="Late Arrival"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/roomServiceBtn"
        app:layout_constraintTop_toBottomOf="@+id/roomServiceBtn"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/roomServiceBtn" />

</android.support.constraint.ConstraintLayout>
